@model List<Designation>

	
<div class="container">
    <div class="row pt-4 pb-12">
        <div class="col-6">
            <h1 class="text-white fw-bold"> Designation List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Designation" asp-action="Create" class="btn btn-success fw-bold">
                <i class="bi bi-plus-circle-fill "></i>New
            </a>
        </div>
    </div>
	    <table class="table table-bordered ">
        <tr>
            <th>S.N</th>
            <th>Name</th>
            <th>Level</th>
            <th></th>
        </tr>
	    <tbody>
		    @{
			    int sn = 1;
		    }
            @foreach(var obj in Model){
			    <tr>
				
                    <th>@sn</th>
                    <th>@obj.Name</th>
                    <th>@obj.Level</th>
                    <th>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Designation" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit</a>
                            <a asp-controller="Designation" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                                Delete
                            </a>
                        </div>
                    </th>
                </tr>
                sn = sn + 1;
            }
        </tbody>
    </table>
</div>