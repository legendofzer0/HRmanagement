@model	Designation
<div class="container ">
	
	<form method="post">
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="fw-bold">Create Designation</h2>
			</div>
			<div class="mb=3 row">
				<label asp-for="Name" class="p-0">Designation Name</label>
				<span asp-validation-for="Name" class="text-danger"></span>
				<input asp-for="Name" type="text" class="form-control mb-4 p-1" />
				<label asp-for="Level" class="p-0">Level</label>
				<select asp-for="Level" class="form-control  mb-4 p-1">
					<option value=1>Junior</option>
					<option value=2>Mid</option>
					<option value=3>Senior</option>
				</select>
				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-success form-control">Create</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Designation" asp-action="Index" class="btn btn-outline-primary form-control">Go back to the list</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>