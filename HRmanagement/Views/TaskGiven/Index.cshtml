@model List<TaskGiven>

@{
	int sn = 1;
}
<h1>Tasks Given</h1>


<div>
	Search Field: <br/>
	Created By:<select>
		<option value="">---Select---</option>
	</select> <br />
	Given to: <select>
		<option value="">---Select---</option>
	</select> <br />
	Task Title: <input type="text">
	<button class="btn btn-success">Filter</button>
</div>
<div>
	<a asp-controller="TaskGiven" asp-action="Create" class="btn btn-success">New</a>
</div>

<table class="table table-bordered">
	<thead>
		<tr>
		<th>S.N</th>
		<th>Title</th>
		<th>Given By</th>
		<th>Given To</th>
		<th>Severity</th>
		<th>Status</th>
		<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
				<th>@sn</th>
				<th>@obj.Name</th>
				<th>@obj.Creator.Name</th>
				<th>@obj.Assignee.Name</th>
				<th>@obj.severity</th>
				<th>@obj.taskStatus</th>
				<th>
					<a asp-action="ViewMore" asp-route-id="@obj.Id" class="btn btn-primary mx-2">View More</a>
				</th>
			</tr>
			
				sn++;
			
		}
	</tbody>
</table>
